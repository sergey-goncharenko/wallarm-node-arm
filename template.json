{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "containerName": {
            "type": "string"
        },
        "imageType": {
            "type": "string",
            "allowedValues": [
                "Public",
                "Private"
            ]
        },
        "imageName": {
            "type": "string"
        },
        "osType": {
            "type": "string",
            "allowedValues": [
                "Linux",
                "Windows"
            ]
        },
        "numberCpuCores": {
            "type": "string"
        },
        "memory": {
            "type": "string"
        },
        "restartPolicy": {
            "type": "string",
            "allowedValues": [
                "OnFailure",
                "Always",
                "Never"
            ]
        },
        "environmentVariable0": {
            "type": "secureString"
        },
        "environmentVariable1": {
            "type": "string"
        },
        "environmentVariable2": {
            "type": "string"
        },
        "environmentVariable3": {
            "type": "string"
        },
        "environmentVariable4": {
            "type": "string"
        },
        "ipAddressType": {
            "type": "string"
        },
        "ports": {
            "type": "array"
        },
        "dnsNameLabel": {
            "type": "string"
        }
    },
    "resources": [
        {
            "location": "[parameters('location')]",
            "name": "[parameters('containerName')]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2019-12-01",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerName')]",
                        "properties": {
                            "image": "[parameters('imageName')]",
                            "resources": {
                                "requests": {
                                    "cpu": "[int(parameters('numberCpuCores'))]",
                                    "memoryInGB": "[float(parameters('memory'))]"
                                }
                            },
                            "environmentVariables": [
                                {
                                    "name": "DEPLOY_PASSWORD",
                                    "secureValue": "[parameters('environmentVariable0')]"
                                },
                                {
                                    "name": "DEPLOY_USER",
                                    "value": "[parameters('environmentVariable1')]"
                                },
                                {
                                    "name": "NGINX_BACKEND",
                                    "value": "[parameters('environmentVariable2')]"
                                },
                                {
                                    "name": "WALLARM_API_HOST",
                                    "value": "[parameters('environmentVariable3')]"
                                },
                                {
                                    "name": "TARANTOOL_MEMORY_GB",
                                    "value": "[parameters('environmentVariable4')]"
                                }
                            ],
                            "ports": "[parameters('ports')]"
                        }
                    }
                ],
                "restartPolicy": "[parameters('restartPolicy')]",
                "osType": "[parameters('osType')]",
                "ipAddress": {
                    "type": "[parameters('ipAddressType')]",
                    "ports": "[parameters('ports')]",
                    "dnsNameLabel": "[parameters('dnsNameLabel')]"
                }
            },
            "tags": {}
        }
    ]
}